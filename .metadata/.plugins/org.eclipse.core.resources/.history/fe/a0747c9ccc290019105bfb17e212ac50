package Collections;

public class ReverseArray {
		public static void main(String args[])
		   {
		    int i,j=0,temp;    
		   int[] arr={10,20,30,40};
		         
		   for(i=0; i<arr.length; i++)
	       j = i - 1;     
	       i = 0;       
		   System.out.println("Reverse Element is");
	       while(i<j)
	       {
	           temp = arr[i];
	           arr[i] = arr[j];
	           arr[j] = temp;
	           i++;
	           j--;
	       }
		   
	       System.out.print("Now the Reverse of Array is : \n");
	       for(i=0; i<arr.length; i++)
	       {
	           System.out.print(arr[i]+ "  ");
	       }       
	   }


}
